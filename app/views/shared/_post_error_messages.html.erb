<% if @post.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <div class="alert alert-danger">
      This form contains <%= pluralize(@post.errors.count, "error") %>.
    </div>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
