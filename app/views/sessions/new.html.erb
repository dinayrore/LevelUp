<% provide(:title, "Login to LevelUp!") %>

<div class="text-center">
    <div class="form-signin">
      <%= image_tag("level-up-mush.png", alt: "LevelUp!", style: "width: 72px;" ) %>
      <%= form_for(:session, url: login_url) do |f| %>
        <h3>Login to LevelUp!</h3>

          <%= link_to 'Sign up', signup_path, class: 'pull-right'  %>
          <%= f.label :email, class: 'pull-left' %>
          <%= f.email_field :email, :autofocus => true, class: 'form-control' %><br>

          <%= f.label :password, class: 'pull-left' %>
          <%= link_to "Forgot Password?", new_password_reset_path, class: 'pull-right' %>
          <%= f.password_field :password, class: 'form-control' %><br>


          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>Remember me</span>
          <% end %>
          <br>

          <%= f.submit 'LevelUp!', class: 'btn btn-lg btn-primary btn-block' %>
      <% end %>
    </div>
</div>
