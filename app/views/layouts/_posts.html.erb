<% @posts.each do |post| %>
   <div class="col-lg-3 col-md-4 col-xs-6 statusCard">
       <ol class="statusList">
         <small>
             <li class="text-center">
               <h2><%= post.user.name %> Status</h2>
               <p><%= post.created_at.strftime("%B %d, %Y") %></p>
             </li>
             <li>
               <p style="vertical-align: middle;"><%= image_tag("red-mush.png", alt: "achievements", class: "statusIcons") %>
               <%= post.achievements %></p>
             </li>
             <li>
               <%= image_tag("poison-mush.png", alt: "obstables", class: "statusIcons") %>
               <%= post.obstacles %>
             </li>
             <li>
               <%= image_tag("super-star.png", alt: "goals", class: "statusIcons") %>
               <%= post.goals %>
             </li>
             <li>
               <%= image_tag("block.png", alt: "panic score", class: "statusIcons") %>
               <%= post.panic_score %>
             </li>
         </small>
       </ol>
       <%= link_to 'See More', post, class: "btn btn-default pull-right" %>
   </div>
 <% end %>
